@model List<Equipments>
<div class="main">
    <div class="row h-100 justify-content-center" style="margin-left:0;margin-right:0;">
        <div class="col-sm-6">
            <div class="card">
                <img src="/Images/EquipmentsPhoto/@Model[0].imageEquipmentPath" class="card-img-top" alt="..." width="200" height="200">
                <div class="card-body">
                    <h5 class="card-title">@Model[0].Name     @((float)Model[0].Cost) р.</h5>
                    <p class="card-text">@Model[0].Description</p>
                    <a href="~/Catalog/Equip/@Model[0].idEquipment" class="btn btn-primary">Подробнее...</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <img src="/Images/EquipmentsPhoto/@Model[1].imageEquipmentPath" class="card-img-top" alt="..." width="200" height="200">
                <div class="card-body">
                    <h5 class="card-title">@Model[1].Name     @((float)Model[1].Cost) р.</h5>
                    <p class="card-text">@Model[1].Description</p>
                    <a href="~/Catalog/Equip/@Model[1].idEquipment" class="btn btn-primary">Подробнее...</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <img src="/Images/EquipmentsPhoto/@Model[2].imageEquipmentPath" class="card-img-top" alt="..." width="200" height="200">
                <div class="card-body">
                    <h5 class="card-title">@Model[2].Name     @((float)Model[2].Cost) р.</h5>
                    <p class="card-text">@Model[2].Description</p>
                    <a href="~/Catalog/Equip/@Model[2].idEquipment" class="btn btn-primary">Подробнее...</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <img src="/Images/EquipmentsPhoto/@Model[3].imageEquipmentPath" class="card-img-top" alt="..." width="200" height="200">
                <div class="card-body">
                    <h5 class="card-title">@Model[3].Name     @((float)Model[3].Cost) р.</h5>
                    <p class="card-text">@Model[3].Description</p>
