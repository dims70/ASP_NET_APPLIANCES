@model Equipments
@{
    ViewBag.Title = "Техника";
    var db = new AppliancesContext();
}
<div class="equipment">
    <div class="container">
        <div class="equipment-content">
            <div class="title-equipment">
                <h3>@Model.Name</h3>
                <h5>Артикул: @Model.idEquipment</h5>
                <h5>Категория: @(db.Categories.Where(c=>Model.idCategory==c.idCategory).ToList()[0].Name)</h5>
            </div>
            <div class="equipment-photo">
                <img src="~/Images/EquipmentsPhoto/@Model.imageEquipmentPath" alt="Не удалось загрузить изображение" width="100%" height="100%">
            </div>
            <div class="cost">
                <h2>Цена: @Model.Cost</h2>
            </div>
            <div class="buy">
                <a href="buy" class="buya">Купить</a>
            </div>
            <div class="description">
                <h2>О товаре</h2>
                <h3>Производитель: @Model.Builder</h3>
                <h3>Состояние товара: @Model.StateEquipment</h3>
                <span>@Model.Description</span>
            </div>
        </div>
    </div>
</div>

